<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- activity & fragment themes. -->

    <style name="MysplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

    <style name="MysplashTheme.Translucent" parent="MysplashTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme.TranslucentNavigation" parent="MysplashTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation"
        parent="MysplashTheme.Translucent">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- main activity. -->

    <style
        name="MysplashTheme.TranslucentNavigation.Main"
        parent="MysplashTheme.TranslucentNavigation" />

    <!-- photo activity 2. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Photo2"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:windowEnterTransition">@transition/photo_activity_2_enter</item>
        <item name="android:windowReturnTransition">@transition/photo_activity_2_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/photo_activity_2_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/photo_activity_2_shared_return</item>
    </style>

    <!-- preview activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Preview"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- user activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.User"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:windowEnterTransition">@transition/user_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/user_activity_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/user_activity_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/user_activity_shared_return</item>
    </style>

    <!-- me activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Me"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:windowEnterTransition">@transition/me_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/me_activity_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/me_activity_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/me_activity_shared_return</item>
    </style>

    <!-- collection activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Collection"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:windowEnterTransition">@transition/collection_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/collection_activity_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/collection_activity_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/collection_activity_shared_return</item>
    </style>

    <!-- settings activity. -->

    <style name="MysplashTheme.Translucent.Settings" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:alertDialogTheme">@style/MysplashDialogTheme</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

    <!-- common activity theme. -->

    <style name="MysplashTheme.Common" parent="MysplashTheme" />

    <style name="MysplashTheme.Translucent.Common" parent="MysplashTheme.Translucent" />

    <!-- set wallpaper activity. -->

    <style name="MysplashTheme.SetWallpaper" parent="MysplashTheme">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorTextDark</item>
        <item name="root_color">@color/colorPrimary_light</item>
        <item name="line_color">@color/colorPrimaryDark_light</item>
        <item name="title_color">@color/colorTextDark</item>
        <item name="subtitle_color">@color/colorTextGrey</item>
        <item name="content_color">@color/colorTextDark2nd</item>
        <item name="android:windowBackground">@color/colorPrimary_dark</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- popup. -->

    <style name="material_popup_menu"
        parent="@android:style/Widget.Material.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/root_color</item>
    </style>

    <!-- dialog. -->
    <style name="MysplashDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorRoot</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/colorTextSubtitle</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextTitle</item>
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="colorAccent">@color/colorTextTitle</item>
    </style>

</resources>