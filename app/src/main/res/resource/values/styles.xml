<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- activity & fragment themes. -->

    <style name="MysplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

    <style name="MysplashTheme.Translucent" parent="MysplashTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme.TranslucentNavigation" parent="MysplashTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation"
        parent="MysplashTheme.Translucent">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- main activity. -->

    <style
        name="MysplashTheme.TranslucentNavigation.Main"
        parent="MysplashTheme.TranslucentNavigation" />

    <!-- photo activity 2. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Photo2"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- preview activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Preview"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- user activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.User"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- me activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Me"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- collection activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Collection"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- settings activity. -->

    <style name="MysplashTheme.Translucent.Settings" parent="MysplashTheme.Translucent">
        <item name="android:alertDialogTheme">@style/MysplashDialogTheme</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

    <!-- common activity theme. -->

    <style name="MysplashTheme.Common" parent="MysplashTheme" />

    <style name="MysplashTheme.Translucent.Common" parent="MysplashTheme.Translucent" />

    <!-- set wallpaper activity. -->

    <style name="MysplashTheme.SetWallpaper" parent="MysplashTheme">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorTextDark</item>
        <item name="root_color">@color/colorPrimary_light</item>
        <item name="line_color">@color/colorPrimaryDark_light</item>
        <item name="title_color">@color/colorTextDark</item>
        <item name="subtitle_color">@color/colorTextGrey</item>
        <item name="content_color">@color/colorTextDark2nd</item>
        <item name="android:windowBackground">@color/colorPrimary_dark</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- toolbar. -->

    <style name="MysplashToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:textColorSecondary">?attr/content_color</item>
    </style>

    <!-- tab layout. -->

    <style name="MysplashTabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">?attr/title_color</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabTextColor">?attr/subtitle_color</item>
    </style>

    <!-- menu. -->

    <style name="MysplashPopupMenuTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?attr/root_color</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <!-- Popup window. -->
    <style name="MysplashPopupWindowAnimation.Top.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MysplashPopupWindowAnimation.Top.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MysplashPopupWindowAnimation.Bottom.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MysplashPopupWindowAnimation.Bottom.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!-- Text -->

    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.025</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.025</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/subtitle_color</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.05</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">?attr/content_color</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.05</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="body_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">?attr/subtitle_color</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.05</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <!-- button -->

    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="material_image_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/content_color</item>
    </style>

    <style name="material_image_button_without_tint">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- image -->

    <style name="material_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:tint">?attr/content_color</item>
    </style>

    <!-- popup. -->

    <style name="material_popup_menu"
        parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">?attr/root_color</item>
    </style>

    <!-- dialog. -->
    <style name="MysplashDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/colorTextSubtitle</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextTitle</item>
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="colorAccent">@color/colorTextTitle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>