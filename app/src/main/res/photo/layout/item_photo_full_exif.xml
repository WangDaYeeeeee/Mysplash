<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_photo_full_exif"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="DisableBaselineAlignment">

    <ImageView
        android:id="@+id/item_photo_full_exif_icon"
        android:src="@drawable/ic_color_light"
        style="@style/material_icon"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/item_photo_full_exif_colorSample"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_photo_full_exif_icon"
        android:layout_marginRight="@dimen/little_margin"
        tools:background="@color/colorAccentRed"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/item_photo_full_exif_text"
        android:textColor="?attr/content_color"
        android:layout_toRightOf="@id/item_photo_full_exif_colorSample"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:maxLines="1"
        style="@style/content_text"
        tools:text="#F15151"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>