<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_photo_2_more_page_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/colorDarkCardBackground"
    tools:layout_height="72dp"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <com.wangdaye.mysplash.common.ui.widget.freedomSizeView.FreedomImageView
        android:id="@+id/item_photo_2_more_page_vertical_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        app:fiv_not_free="true"
        app:fiv_shadow_position="top"
        tools:src="?attr/title_color" />

    <TextView
        android:id="@+id/item_photo_2_more_page_vertical_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/subtitle_text_size"
        android:textStyle="bold"
        android:maxLines="1"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@color/colorTextDark2nd"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        style="@style/title_text"
        tools:text="LET THE INSPIRATION BEGIN"/>

</RelativeLayout>