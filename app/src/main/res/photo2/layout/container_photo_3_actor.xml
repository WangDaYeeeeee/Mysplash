<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_photo_3_actor_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_shadow_actor">

    <LinearLayout
        android:id="@+id/container_photo_3_actor_controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.wangdaye.mysplash.common.ui.widget.CircleImageView
            android:id="@+id/container_photo_3_actor_avatar"
            android:layout_width="@dimen/little_icon_size"
            android:layout_height="@dimen/little_icon_size"
            android:layout_margin="@dimen/normal_margin"
            android:scaleType="fitCenter"
            android:translationZ="@dimen/low_elevation"
            android:stateListAnimator="@animator/touch_rise_item"
            tools:src="@drawable/default_avatar"
            tools:ignore="UnusedAttribute" />

        <RelativeLayout
            android:id="@+id/container_photo_3_actor_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.wangdaye.mysplash.photo3.ui.PhotoButtonBar
                android:id="@+id/container_photo_3_actor_buttonBar"
                android:layout_width="110dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/normal_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/container_photo_3_actor_buttonBar"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/normal_margin">

                <TextView
                    android:id="@+id/container_photo_3_actor_title"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:layout_marginBottom="-2dp"
                    style="@style/subtitle_text"
                    tools:text="Tim Goedhart" />

                <TextView
                    android:id="@+id/container_photo_3_actor_subtitle"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:shadowColor="@color/colorTextDark2nd"
                    style="@style/subtitle_text"
                    tools:text="Sep 13, 2017" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <com.wangdaye.mysplash.common.ui.widget.coordinatorView.NavigationBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

</LinearLayout>