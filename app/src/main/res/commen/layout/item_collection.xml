<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_collection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise_avatar"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="?attr/root_color"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wangdaye.mysplash.common.ui.widget.CoverImageView
            android:id="@+id/item_collection_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:civ_shadow_position="both"
            tools:src="?attr/title_color" />

        <TextView
            android:id="@+id/item_collection_subtitle"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:alpha="0.9"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:text="3 photos"/>

        <TextView
            android:id="@+id/item_collection_title"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:textSize="@dimen/large_title_text_size"
            android:textStyle="bold"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_below="@id/item_collection_subtitle"
            style="@style/title_text"
            tools:text="LET THE INSPIRATION BEGIN"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_collection_cover">

            <com.wangdaye.mysplash.common.ui.widget.CircularImageView
                android:id="@+id/item_collection_avatar"
                android:layout_width="@dimen/mini_icon_size"
                android:layout_height="@dimen/mini_icon_size"
                android:layout_margin="@dimen/normal_margin"
                android:stateListAnimator="@animator/touch_rise_avatar"
                android:foreground="?attr/selectableItemBackground"
                tools:src="@drawable/default_avatar"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/item_collection_name"
                android:textColor="@color/colorTextLight"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_collection_avatar"
                android:layout_marginEnd="@dimen/normal_margin"
                android:maxLines="1"
                style="@style/subtitle_text"
                tools:text="Wang Yueeeeee"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>