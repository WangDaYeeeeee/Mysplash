<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_tag_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/little_margin"
    android:layout_marginBottom="@dimen/little_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise_tag"
    app:cardBackgroundColor="?attr/line_color"
    app:cardCornerRadius="@dimen/material_card_radius"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <TextView
        android:id="@+id/item_tag_text"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:maxLines="1"
        android:paddingTop="@dimen/little_margin"
        android:paddingBottom="@dimen/little_margin"
        android:paddingStart="@dimen/normal_margin"
        android:paddingEnd="@dimen/normal_margin"
        android:layout_centerInParent="true"
        style="@style/subtitle_text"
        tools:text="Technology" />

</android.support.v7.widget.CardView>