<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_width="34dp"
    tools:layout_height="34dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/container_circular_progress_icon_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/little_margin"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        tools:src="@drawable/ic_item_state_succeed"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/container_circular_progress_icon_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        app:cpv_animAutostart="true"
        app:cpv_color="?attr/root_color"
        app:cpv_indeterminate="true" />

</RelativeLayout>