<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_following_user_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/large_icon_size"
    android:layout_marginRight="@dimen/normal_margin"
    android:layout_marginBottom="@dimen/normal_margin"
    android:background="?attr/root_color"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <com.wangdaye.mysplash.common.ui.widget.clipView.CircleImageView
        android:id="@+id/item_following_user_avatar"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:layout_margin="@dimen/normal_margin"
        tools:src="@drawable/default_avatar"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/item_following_user_centerFlag"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/item_following_user_title"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/nano_margin"
        android:layout_alignBottom="@id/item_following_user_centerFlag"
        android:layout_toRightOf="@id/item_following_user_avatar"
        style="@style/title_text"
        tools:text="Wang Yueeeeee"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/item_following_user_subtitle"
        android:layout_below="@id/item_following_user_title"
        android:layout_toRightOf="@id/item_following_user_avatar"
        android:layout_marginLeft="@dimen/nano_margin"
        android:layout_marginTop="@dimen/nano_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        style="@style/subtitle_text"
        tools:text="An developer from Qingdao, Chinaaaaaaa. Contact me by email : Wangdayeeeeee@gmail.com"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>