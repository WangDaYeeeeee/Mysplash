<resources>

    <!-- photo activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Photo"
        parent="MysplashTheme.Translucent.TranslucentNavigation">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- preview activity. -->

    <style
        name="MysplashTheme.Translucent.TranslucentNavigation.Preview"
        parent="MysplashTheme.Translucent.TranslucentNavigation" />

    <!-- set wallpaper activity. -->

    <style name="MysplashTheme.SetWallpaper" parent="MysplashTheme">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorTextDark</item>
        <item name="root_color">@color/colorPrimary_light</item>
        <item name="line_color">@color/colorPrimaryDark_light</item>
        <item name="title_color">@color/colorTextDark</item>
        <item name="subtitle_color">@color/colorTextGrey</item>
        <item name="content_color">@color/colorTextDark2nd</item>
        <item name="search_bar_color">@color/colorSearchBar</item>
        <item name="android:windowBackground">@color/colorPrimary_dark</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>